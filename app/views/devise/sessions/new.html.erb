<div class="log_in row">
	
	<div class="col-sm-6 col-md-4"></div>
		
	
	<div class="col-sm-6 col-md-4">
		<% flash.each do |name, msg| -%>
	      <%= content_tag :div, msg, :class => 'alert alert-danger', role: 'alert' %>
	    <% end %>
		<div class="col-sm-12">
			<h2>Acesso o sistema</h2>
		</div>
	<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:role => 'form', :class=>'form-horizontal'}) do |f| %>
	  
	  <div class="form-group">
	  	<%= f.label :email, :class => 'col-sm-4 control-label' %>
	  	<div class="col-sm-6">
	  		<%= f.email_field :email, autofocus: true, :class => 'form-control' %>
	  	</div>
	 </div>
	
	  <div class="form-group">
	  	<%= f.label :password, :class => 'col-sm-4 control-label' %>
	    <div class="col-sm-6">
	    <%= f.password_field :password, autocomplete: "off", :class => 'form-control' %>
	    </div>
	  </div>
	  <div class="form-group">
		  <% if devise_mapping.rememberable? -%>
		  	<div class="col-sm-offset-4 col-sm-10">
		  		<div class="checkbox">
		  			<%= f.check_box :remember_me %> <%= f.label :remember_me %>
		  		</div>
		    </div>
		  <% end -%>
	  </div>
	  	
	   <div class="form-group">
	   	<div class="col-sm-offset-4 col-sm-10">	
	  		<%= f.submit "Log in", :class=>"btn btn-default" %>
	  	</div>
	  </div>
	<% end %>
</div>
</div>
