<h1>Tipos de Pagamento Cadastrados</h1>

<div class="row">
	<div class="table-responsive col-md-8">
		<%= grid(@tipo_pagamentos) do |g|
			
			g.blank_slate  do
		    	content_tag :div, "Nenhum registro encontrado", class: 'well'
		  	end
			
			g.column name: 'Ações' do |option|
				buffer =  link_to('Editar', edit_tipo_pagamento_path(option)) + ' | '
				buffer += link_to('Excluir', tipo_pagamento_path(option), method: :delete, data: {confirm: 'Você tem certeza?'})
				raw buffer
			end
			
			g.column name: 'Tipo', attribute: 'nome'
			g.column name: 'Status', attribute: 'status' do |task|
			  task.status == 1 ? 'Ativo' : 'Inativo'
			end
	    end %>
	</div>

</div>
